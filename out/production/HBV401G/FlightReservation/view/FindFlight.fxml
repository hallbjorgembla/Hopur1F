<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FlightReservation.view.FindFlightController">
   <children>
      <Label layoutX="52.0" layoutY="52.0" text="Departure City" />
      <ComboBox fx:id="fxFindDep" accessibleRole="COMBO_BOX" layoutX="51.0" layoutY="76.0" onAction="#departureHandler" prefHeight="26.0" prefWidth="150.0" />
      <Label layoutX="222.0" layoutY="52.0" text="Arrival City" />
      <ComboBox fx:id="fxFindArr" accessibleRole="COMBO_BOX" layoutX="222.0" layoutY="76.0" onAction="#arrivalHandler" prefHeight="26.0" prefWidth="150.0" />
      <Label layoutX="51.0" layoutY="118.0" text="Date" />
      <DatePicker fx:id="fxFindDate" layoutX="52.0" layoutY="142.0" prefHeight="27.0" prefWidth="161.0" />
      <Button fx:id="fxFindEnter" layoutX="472.0" layoutY="76.0" mnemonicParsing="false" onAction="#saekjaFlug" prefHeight="27.0" prefWidth="80.0" text="Enter" />
      <Button fx:id="fxFindBook" disable="true" layoutX="472.0" layoutY="142.0" mnemonicParsing="false" onAction="#openBookFlight" prefHeight="27.0" prefWidth="80.0" text="Book Flight" />
      <TableView fx:id="fxFlightTable" layoutX="52.0" layoutY="199.0" onMouseClicked="#selectFlight" prefHeight="240.0" prefWidth="650">
        <columns>
            <TableColumn fx:id="fxFlightNumberCol" prefWidth="80" text="Flight No." />
            <TableColumn fx:id="fxDepartureCityCol" prefWidth="100" text="Departure city" />
            <TableColumn fx:id="fxArrivalCityCol" prefWidth="100" text="Arrival City" />
            <TableColumn fx:id="fxFlightDateCol" prefWidth="150" text="Flight Date" />
            <TableColumn fx:id="fxPriceFirstClassCol" prefWidth="100" text="Price first class" />
            <TableColumn fx:id="fxPriceEconomyCol" prefWidth="100" text="Price economy" />
        </columns>
      </TableView>
      <Button fx:id="fxFindBack" layoutX="52.0" layoutY="451.0" mnemonicParsing="false" onAction="#openStart" prefHeight="27.0" prefWidth="80.0" text="Back" />
   </children>
</AnchorPane>
